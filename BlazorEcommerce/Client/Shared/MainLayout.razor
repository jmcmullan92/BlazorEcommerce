@using BlazorEcommerce.Client.Shared.Components.Common

@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider />



<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Blazor Shop</MudText>
        <MudSpacer />
        <SearchBar />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.ShoppingCart" Color="Color.Tertiary" aria-label="Cart" Size="Size.Large"></MudIconButton>
        <MudIconButton Icon="@Icons.Material.Filled.Person" Color="Color.Tertiary" aria-label="Cart" Size="Size.Large"></MudIconButton>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Variant="@DrawerVariant.Persistent" Elevation="2">
        <MyNavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Style="display: flex;">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>



@code {

    bool _drawerOpen = true;

}
