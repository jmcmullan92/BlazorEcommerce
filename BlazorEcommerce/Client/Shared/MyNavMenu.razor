@inject ICategoryStore categoryStore

<MudNavMenu Class="mud-width-full">
    <MudNavLink Match="NavLinkMatch.All" Href="/" Icon="@Icons.Material.Filled.Dashboard" IconColor="Color.Info">Home</MudNavLink>
    
    @if (categoryStore.Categories != null && categoryStore.Categories.Count > 0)
    {
        @foreach (var category in categoryStore.Categories)
        {
            <MudNavLink Match="NavLinkMatch.All" Href="@category.Url" IconColor="Color.Info">@category.Name</MudNavLink>
        }
    }
    
</MudNavMenu>

@code {

    protected override async Task OnInitializedAsync()
    {
        await categoryStore.GetCategories();
    }
}